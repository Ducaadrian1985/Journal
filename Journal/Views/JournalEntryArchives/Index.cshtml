@model List<JournalEntryArchive>

<div class="container">
	<div class="row pt-4">
	
		<div class="col-6 text-end">
			<h2>Journal Entry Archives</h2>

		</div>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
		<tr>
			<th>Tag</th>
			<th>Title</th>
			<th>Content</th>
			<th>Date</th>
			<th>Category</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var entry in Model)
		{
				<tr>
				<td>@entry.JournalEntry.Tag?.Name</td>
				<td>@entry.JournalEntry.Title</td>
				<td>@entry.JournalEntry.Content</td>
					<td>@entry.JournalEntry.Created.ToString("yyyy-MM-dd HH:mm:ss") </td> <!-- Format the DateTime -->
					<td>@entry.JournalEntry.Category?.Name</td>
				<td>
					
					<a asp-controller="JournalEntryArchives" asp-action="Delete" asp-route-id="@entry.Id"
					   class="btn btn-danger btn-sm">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive" viewBox="0 0 16 16">
							<path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 12.5V5a1 1 0 0 1-1-1zm2 3v7.5A1.5 1.5 0 0 0 3.5 14h9a1.5 1.5 0 0 0 1.5-1.5V5zm13-3H1v2h14zM5 7.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5"/>
						</svg>
						Unarchive
					</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>
